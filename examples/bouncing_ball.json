{
    "Game": {
        "name":"Bouncing Ball Game",
        "locations": 
        [
            {
                "name": "falling",
                "invariant": "0 <= pos && pos <= 1000 && acc == -10",
                "flow": [
                    {"pos": "spd"},
                    {"spd": "acc"}
                ],
                "initial": true
            }
        ],
        "initial_valuation": [
            {"pos": 1000},
            {"spd": 0},
            {"acc": -10},
            {"dissipation": 0.9}
        ],
        "agents": ["A"],
        "actions": ["up"],
        "edges": 
        [
            {
                "name": "e1",
                "start_location": "falling",
                "target_location": "falling",
                "guard": "spd < 0",
                "decision": 
                {
                    "A": "up"
                },
                "jump": [
                    {"spd": "- dissipation * spd"}
                ]
            }
        ],
        "triggers": 
        {
            "A": ["pos == 0"]
        }
    },
    "termination-conditions": {
        "time-bound": 1000.0,
        "max-steps": 20,
        "state-formula": "pos == 0 && spd^2 < 0.01"
    },
    "queries": 
    [
        "<<A>> F pos < 0 || pos > 1000",
        "[[A]] G pos >= 0",
        "[[A]] F pos == 700 && spd > 0"
    ]
}